<p id="notice"><%= notice %></p>

<h1>Our Children</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Age</th>
      <th>Sex</th>
      <th>Bio</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @children.each do |child| %>
      <tr>
        <td><%= child.first_name %></td>
        <td><%= child.last_name %></td>
        <td><%= child.age %></td>
        <td><%= child.sex %></td>
        <td><%= child.bio %></td>
        <td><%= link_to 'Show', child %></td>
      </tr>
    <% end %>
  </tbody>
</table>


